<div class="container py-5">
  <h1 class="text-center mb-4 fw-bold">Mtl Mall</h1>

  <!-- Search bar -->
  <%= form_with url: brands_path, method: :get, local: true, class: "d-flex justify-content-center mb-5" do %>
    <div class="input-group" style="max-width: 500px;">
      <span class="input-group-text border-0">
        <i class="bi bi-search"></i>
      </span>
      <%= text_field_tag :query, params[:query], class: "form-control rounded-pill ps-2", placeholder: "Search Local brands...", style: "background-color: #eee; border: none;" %>
    </div>
  <% end %>


  <!-- Dynamic Brand Grid -->
  <% if @brands.any? %>
    <div class="row g-4">
      <% @brands.each do |brand| %>
        <div class="col-6 col-md-4">
          <%= link_to brand_path(brand), class: "text-decoration-none text-dark" do %>
            <div class="card border-0 shadow-sm h-100">
              <%= image_tag(brand.image.presence || "artgang.png", alt: brand.name, class: "card-img-top", style: "aspect-ratio: 1/1; object-fit: cover; border-radius: 8px;") %>
              <div class="card-body text-center">
                <h5 class="card-title fw-semibold mb-0"><%= brand.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center mt-5">
      <h5 class="text-muted mb-3">There's nothing here...</h5>
      <%= link_to "Discover More", brands_path, class: "btn btn-outline-dark rounded-pill px-4" %>
    </div>
  <% end %>

</div>
