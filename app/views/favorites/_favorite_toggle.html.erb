<% if favorite %>
  <%= button_to favorite_path(favorite),
                method: :delete,
                form: { data: { turbo_stream: true } },
                class: "btn p-0 border-0 bg-transparent text-warning fs-5",
                rel: "nofollow",
                id: "favorite-toggle-#{favoritable.id}" do %>
    <i class="bi bi-star-fill"></i>
  <% end %>
<% else %>
  <%= button_to favorites_path,
                method: :post,
                params: { type: favoritable.class.name, id: favoritable.id },
                form: { data: { turbo_stream: true } },
                class: "btn p-0 border-0 bg-transparent text-dark fs-5",
                rel: "nofollow",
                id: "favorite-toggle-#{favoritable.id}" do %>
    <i class="bi bi-star"></i>
  <% end %>
<% end %>
