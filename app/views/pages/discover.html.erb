<div class="container py-5">
  <h1 class="text-center mb-5 fw-bold">Featured Montreal</h1>

  <!-- Brand -->
  <div class="card mb-4 text-white border-0 shadow" style="height: 400px;">
    <%= image_tag("artgang.png", class: "card-img w-100 h-100", alt: "Artgang Brand", style: "object-fit: cover;") %>
    <div class="card-img-overlay d-flex flex-column justify-content-end bg-dark bg-opacity-50 p-4">
      <h2 class="fw-bold">Artgang</h2>
      <p class="small mb-2">Brand</p>
      <%= link_to "More", "#", class: "btn btn-light btn-sm px-3 py-1 fw-semibold align-self-center", style: "width: fit-content;" %>
    </div>
  </div>

  <!-- Music -->
  <div class="card mb-4 text-white border-0 shadow" style="height: 400px;">
