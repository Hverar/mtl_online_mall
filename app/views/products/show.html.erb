<div class="container py-5">
  <div class="row align-items-center">
    <!-- Left: Product Image -->
    <div class="col-md-6 mb-4 mb-md-0">
      <%= image_tag @product.image.presence || "default_brand_product.jpg", class: "img-fluid rounded" %>
    </div>

    <!-- Right: Product Details -->
    <div class="col-md-6">
      <h2 class="fw-bold mb-3">
        <%= link_to @product.name, product_path(@product), class: "text-decoration-none text-dark border-bottom border-3 border-primary" %>
      </h2>

      <p><strong>Price:</strong> <%= number_to_currency(@product.price, unit: "$") %></p>

      <div class="mb-3">
        <%= button_to "BUY", "#", class: "btn btn-outline-primary me-2", disabled: true %>
        <%= button_to "Add to Cart", add_to_cart_path(@product), method: :post, class: "btn btn-outline-secondary" %>
      </div>



      <div class="p-3 bg-light rounded border">
        RANDOM INFO LIKE WTV
      </div>
    </div>
  </div>
</div>
