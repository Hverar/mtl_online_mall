<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag(@music.cover_image.presence || "default_music.jpg", class: "img-fluid rounded") %>
    </div>
    <div class="col-md-6">
      <h2 class="fw-bold"><%= @music.title %></h2>
      <p><strong>Artist:</strong> <%= @music.artist %></p>
      <p><strong>Genre:</strong> <%= @music.genre %></p>
      <p><strong>Description:</strong><br><%= simple_format(@music.description) %></p>
      <%= link_to "Edit", edit_music_path(@music), class: "btn btn-outline-secondary mt-3" %>
    </div>
  </div>
</div>
