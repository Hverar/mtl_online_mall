<div class="container py-5">
  <h1 class="text-center mb-4 fw-bold">Mtl Music</h1>

  <!-- Search bar -->
  <div class="d-flex justify-content-center mb-5">
    <div class="input-group" style="max-width: 500px;">
      <span class="input-group-text bg-light border-0">
        <i class="bi bi-search"></i>
      </span>
      <input type="text" class="form-control rounded-pill ps-2" placeholder="Search Music in Mtl Mall..." style="background-color: #eee; border: none;">
    </div>
  </div>

  <% @artists.each do |artist| %>
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h5 class="fw-bold mb-0">
        <%= link_to artist.name, artist_path(artist), class: "text-dark text-decoration-none" %>
      </h5>
      <a href="#" class="text-decoration-none small fw-semibold">Show all</a>
    </div>

    <div class="row g-3 mb-4">
      <% artist.songs.each do |song| %>
        <div class="col-6 col-md-2">
          <div class="card border-0 shadow-sm h-100 p-2">
            <%= link_to song_path(song) do %>
              <%= image_tag(song.image.presence || "default_music.jpg", alt: song.title, class: "card-img-top", style: "aspect-ratio: 1/1; object-fit: cover; border-radius: 8px;") %>
            <% end %>
            <div class="mt-2 text-center">
              <strong>
                <%= link_to song.title, song_path(song), class: "text-dark text-decoration-none" %>
              </strong><br>
              <small>
                <%= link_to artist.name, artist_path(artist), class: "text-muted text-decoration-none" %>
              </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
