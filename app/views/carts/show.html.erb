<div class="container py-5 min-vh-100 d-flex flex-column justify-content-between">
  <div>
    <h2 class="mb-4 text-center fw-bold">Your Shopping Cart</h2>

    <% if @products.any? %>
      <ul class="list-group mb-4 shadow-sm rounded-3">
        <% total = 0 %>
        <% @products.each do |product| %>
          <% total += product.price %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1"><%= product.name %></h5>
              <small class="text-muted"><%= number_to_currency(product.price, unit: "$") %></small>
            </div>
            <%= button_to "Remove", remove_from_cart_path(product), method: :delete, class: "btn btn-sm btn-outline-danger rounded-pill px-3" %>
          </li>
        <% end %>
      </ul>

      <!-- Total & Actions -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5">
        <h4 class="mb-3 mb-md-0 fw-semibold">Total: <%= number_to_currency(total, unit: "$") %></h4>
        <div>
          <%= link_to "Continue Shopping", root_path, class: "btn btn-outline-secondary me-2 rounded-pill px-4" %>
          <%= link_to "Checkout", "#", class: "btn btn-dark rounded-pill px-4" %>
        </div>
      </div>
    <% else %>
      <div class="text-center mt-5">
        <p class="lead mb-3">Your cart is empty.</p>
        <%= link_to "Discover", root_path, class: "btn btn-dark rounded-pill px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
