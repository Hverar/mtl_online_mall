<div class="container py-5">
  <h2 class="mb-4">Your Cart</h2>

  <% if @products.any? %>
    <ul class="list-group mb-4">
      <% @products.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= product.name %></strong><br>
            <%= number_to_currency(product.price, unit: "$") %>
          </div>
          <%= button_to "Remove", remove_from_cart_path(product), method: :delete, class: "btn btn-sm btn-danger" %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Continue Shopping", root_path, class: "btn btn-outline-primary" %>
  <% else %>
    <p>Your cart is empty.</p>
    <%= link_to "Browse Products", root_path, class: "btn btn-primary" %>
  <% end %>
</div>
