<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-3 text-center">
      <%= image_tag(@song.image.presence || "default_song_cover.jpg", alt: @song.title, class: "img-fluid rounded shadow") %>
    </div>

    <div class="col-md-9">
      <h2 class="fw-bold mb-0"><%= @song.title.upcase %></h2>
      <p class="text-muted mb-1">Album</p>
      <p class="mb-1">
        <%= link_to @song.artist.name, artist_path(@song.artist), class: "text-decoration-none fw-semibold" %>
        • 2022 • 3:10
      </p>

    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h6 class="fw-semibold mb-2">Where to watch</h6>
      <ul class="list-unstyled">
        <li><a href="#" class="text-decoration-none">YOUTUBE</a></li>
        <li><a href="#" class="text-decoration-none">YOUTUBE</a></li>
        <li><a href="#" class="text-decoration-none">YOUTUBE</a></li>
      </ul>
    </div>

    <div class="col-md-4">
      <h6 class="fw-semibold mb-2">More From Artist</h6>
      <ul class="list-unstyled">
        <% @song.artist.songs.where.not(id: @song.id).limit(3).each do |other_song| %>
          <li>
            <%= link_to other_song.title, song_path(other_song), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-4">
      <h6 class="fw-semibold mb-2">More from Album</h6>
      <p class="text-muted">Recommended</p>
    </div>
  </div>
</div>
